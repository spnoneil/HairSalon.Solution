@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Stylist>;

  <h1>Who's workin':</h1>

  @if  (@Model.Count == 0)
  {
    <h2>Wait a minute... you ain't added no stylists yet!</h2>
  }

  @foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Go home!", "Index", "Home")</p>