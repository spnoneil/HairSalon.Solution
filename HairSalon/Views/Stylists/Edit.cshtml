@{
  Layout = "_Layout";
}

@model Salon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this stylist: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Speciality)
  @Html.TextBoxFor(model => model.Speciality)
  @Html.LabelFor(model => model.PhoneNumber)
  @Html.TextBoxFor(model => model.PhoneNumber)
  @Html.LabelFor(model => model.HourlyRate)
  @Html.TextBoxFor(model => model.HourlyRate)
    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to stylist list", "Index")</p>
<p>@Html.ActionLink("Go home!", "Index", "Home")</p>